<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black"
	tools:context=".activity.SplashActivity">

	<FrameLayout
		android:id="@+id/flSplash"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivSplashGuideImage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="fitXY"
		android:visibility="gone"
		app:srcCompat="@mipmap/splash_guide_image" />

	<com.viegre.nas.pad.widget.SplashVideoPlayer
		android:id="@+id/svpSplashGuideVideo"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvSplashGuideSkip"
		android:layout_width="110px"
		android:layout_height="48px"
		android:layout_marginTop="55px"
		android:layout_marginEnd="36px"
		android:background="@drawable/splash_guide_skip_bg"
		android:gravity="center"
		android:includeFontPadding="false"
		android:text="@string/splash_guide_skip"
		android:textColor="@android:color/white"
		android:textSize="21px"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>