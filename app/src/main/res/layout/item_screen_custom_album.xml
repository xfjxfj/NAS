<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/clItemScreenCustomAlbumThumbnail"
		android:layout_width="90px"
		android:layout_height="90px"
		android:layout_marginStart="34px"
		android:layout_marginTop="23px"
		android:layout_marginBottom="23px"
		android:background="#515156"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/acivItemScreenCustomAlbumThumbnail1"
			android:layout_width="42px"
			android:layout_height="42px"
			android:layout_marginStart="2px"
			android:layout_marginTop="2px"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/acivItemScreenCustomAlbumThumbnail2"
			android:layout_width="42px"
			android:layout_height="42px"
			android:layout_marginTop="2px"
			android:layout_marginEnd="2px"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/acivItemScreenCustomAlbumThumbnail3"
			android:layout_width="42px"
			android:layout_height="42px"
			android:layout_marginStart="2px"
			android:layout_marginBottom="2px"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/acivItemScreenCustomAlbumThumbnail4"
			android:layout_width="42px"
			android:layout_height="42px"
			android:layout_marginEnd="2px"
			android:layout_marginBottom="2px"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvItemScreenCustomAlbumName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20px"
		android:layout_marginBottom="10px"
		android:includeFontPadding="false"
		android:textColor="#E5E5EB"
		android:textSize="20px"
		app:layout_constraintBottom_toTopOf="@id/actvItemScreenCustomAlbumCount"
		app:layout_constraintStart_toEndOf="@id/clItemScreenCustomAlbumThumbnail"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_chainStyle="packed" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvItemScreenCustomAlbumCount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20px"
		android:includeFontPadding="false"
		android:text="@string/screen_custom_album_count"
		android:textColor="#5C5F68"
		android:textSize="16px"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/clItemScreenCustomAlbumThumbnail"
		app:layout_constraintTop_toBottomOf="@id/actvItemScreenCustomAlbumName" />

	<androidx.appcompat.widget.AppCompatCheckBox
		android:layout_width="26px"
		android:layout_height="26px"
		android:layout_marginEnd="34px"
		android:theme="@style/screen_custom_check_box"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>