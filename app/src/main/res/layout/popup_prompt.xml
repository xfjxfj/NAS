<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="680px"
	android:layout_height="wrap_content"
	android:background="@drawable/popup_bg">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupPromptTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="50px"
		android:layout_marginTop="40px"
		android:includeFontPadding="false"
		android:textColor="@android:color/white"
		android:textSize="30px"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupPromptContent"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="60px"
		android:layout_marginTop="60px"
		android:layout_marginEnd="60px"
		android:gravity="center_horizontal"
		android:includeFontPadding="false"
		android:textColor="@color/popup_content"
		android:textSize="24px"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/actvPopupPromptTitle" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupPromptConfirm"
		android:layout_width="128px"
		android:layout_height="56px"
		android:layout_marginTop="68px"
		android:layout_marginEnd="50px"
		android:layout_marginBottom="40px"
		android:background="@drawable/popup_confirm_bg"
		android:gravity="center"
		android:includeFontPadding="false"
		android:text="@string/confirm"
		android:textColor="@android:color/white"
		android:textSize="24px"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/actvPopupPromptContent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupPromptCancel"
		android:layout_width="128px"
		android:layout_height="56px"
		android:layout_marginEnd="20px"
		android:background="@drawable/popup_cancel_bg"
		android:gravity="center"
		android:includeFontPadding="false"
		android:text="@string/cancel"
		android:textColor="@android:color/white"
		android:textSize="24px"
		android:textStyle="bold"
		app:layout_constraintEnd_toStartOf="@id/actvPopupPromptConfirm"
		app:layout_constraintTop_toTopOf="@id/actvPopupPromptConfirm" />
</androidx.constraintlayout.widget.ConstraintLayout>