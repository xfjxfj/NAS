<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="33.5dp"
	android:paddingStart="10dp"
	android:paddingEnd="10dp">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANStatus"
		android:layout_width="8dp"
		android:layout_height="8dp"
		android:scaleType="fitXY"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/mvItemWLANName"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wifi_connected" />

	<com.sunfusheng.marqueeview.MarqueeView
		android:id="@+id/mvItemWLANName"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		app:layout_constraintBottom_toTopOf="@id/actvItemWLANTip"
		app:layout_constraintEnd_toStartOf="@id/acivItemWLANLock"
		app:layout_constraintStart_toEndOf="@id/acivItemWLANStatus"
		app:layout_constraintTop_toTopOf="parent"
		app:mvAnimDuration="1000"
		app:mvDirection="right_to_left"
		app:mvSingleLine="true"
		app:mvTextColor="@color/wlan_name"
		app:mvTextSize="10sp" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvItemWLANTip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:includeFontPadding="false"
		android:text="@string/low_security"
		android:textColor="@color/wlan_tip"
		android:textSize="6sp"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="@id/mvItemWLANName"
		app:layout_constraintTop_toBottomOf="@id/mvItemWLANName" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANArrow"
		android:layout_width="15dp"
		android:layout_height="8dp"
		android:paddingStart="5dp"
		android:paddingEnd="5dp"
		android:scaleType="center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wlan_item_arrow" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANSignal"
		android:layout_width="11dp"
		android:layout_height="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/acivItemWLANArrow"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wifi_signal_3" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANLock"
		android:layout_width="6.5dp"
		android:layout_height="8dp"
		android:layout_marginEnd="5dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/acivItemWLANSignal"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wifi_locked" />
</androidx.constraintlayout.widget.ConstraintLayout>