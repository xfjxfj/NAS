<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/clItemWLANRoot"
	android:layout_width="match_parent"
	android:layout_height="67px"
	android:descendantFocusability="blocksDescendants"
	android:paddingStart="20px"
	android:paddingEnd="20px">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANStatus"
		android:layout_width="16px"
		android:layout_height="16px"
		android:clickable="false"
		android:focusable="false"
		android:scaleType="fitXY"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/actvItemWLANName"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wifi_connected" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvItemWLANName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="11px"
		android:clickable="false"
		android:focusable="false"
		android:includeFontPadding="false"
		android:textColor="@color/wlan_name"
		android:textSize="20px"
		app:layout_constraintBottom_toTopOf="@id/actvItemWLANTip"
		app:layout_constraintStart_toEndOf="@id/acivItemWLANStatus"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvItemWLANTip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="2px"
		android:clickable="false"
		android:focusable="false"
		android:includeFontPadding="false"
		android:text="@string/saved"
		android:textColor="@color/wlan_tip"
		android:textSize="12px"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="@id/actvItemWLANName"
		app:layout_constraintTop_toBottomOf="@id/actvItemWLANName" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANArrow"
		android:layout_width="30px"
		android:layout_height="36px"
		android:padding="10px"
		android:scaleType="center"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wlan_item_arrow" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANSignal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="6px"
		android:clickable="false"
		android:focusable="false"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/acivItemWLANArrow"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wifi_signal_4" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemWLANLock"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16px"
		android:clickable="false"
		android:focusable="false"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/acivItemWLANSignal"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/wifi_locked" />
</androidx.constraintlayout.widget.ConstraintLayout>