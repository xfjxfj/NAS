<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black0"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="6px">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/de_laytou"
        android:layout_width="144px"
        android:layout_height="180px"
        android:background="@color/black1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_dv"
            android:layout_width="46px"
            android:layout_height="49px"
            android:src="@mipmap/test_settings_my_device_icon"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_dv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19px"
            android:text="@string/exo_controls_hide"
            android:textColor="@color/black10"
            android:textSize="16px"
            app:layout_constraintEnd_toEndOf="@+id/image_dv"
            app:layout_constraintStart_toStartOf="@+id/image_dv"
            app:layout_constraintTop_toBottomOf="@+id/image_dv"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/de_laytou1"
        android:layout_width="144px"
        android:layout_height="180px"
        android:background="@color/black1"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_dv1"
            android:layout_width="46px"
            android:layout_height="49px"
            android:src="@mipmap/add_devices"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_dv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33px"
            android:layout_marginBottom="19px"
            android:text="123456789"
            android:textColor="@color/black10"
            android:textSize="16px"
            app:layout_constraintEnd_toEndOf="@+id/image_dv1"
            app:layout_constraintStart_toStartOf="@+id/image_dv1"
            app:layout_constraintTop_toBottomOf="@+id/image_dv1"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>