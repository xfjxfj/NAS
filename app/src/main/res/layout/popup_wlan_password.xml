<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/wlan_password_bg">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupWLANName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="20dp"
		android:includeFontPadding="false"
		android:textColor="@android:color/white"
		android:textSize="15sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupWLANTip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="27dp"
		android:layout_marginTop="34dp"
		android:includeFontPadding="false"
		android:text="@string/password"
		android:textColor="@color/wlan_password_popup_tip"
		android:textSize="12sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/actvPopupWLANName" />

	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/acetPopupWLANInput"
		android:layout_width="300dp"
		android:layout_height="34dp"
		android:layout_marginStart="17.5dp"
		android:layout_marginEnd="27.5dp"
		android:background="@drawable/wlan_password_popup_input_bg"
		android:gravity="center_vertical"
		android:includeFontPadding="false"
		android:inputType="textPassword"
		android:maxLength="16"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:textColor="@android:color/white"
		android:textColorHint="@color/wlan_password_popup_hint"
		android:textSize="12sp"
		app:layout_constraintBottom_toBottomOf="@id/actvPopupWLANTip"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/actvPopupWLANTip"
		app:layout_constraintTop_toTopOf="@id/actvPopupWLANTip" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupWLANConfirm"
		android:layout_width="64dp"
		android:layout_height="28dp"
		android:layout_marginTop="23.5dp"
		android:layout_marginEnd="26.5dp"
		android:layout_marginBottom="20dp"
		android:background="@drawable/wlan_password_popup_confirm_bg"
		android:gravity="center"
		android:includeFontPadding="false"
		android:text="@string/confirm"
		android:textColor="@android:color/white"
		android:textSize="12sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/acetPopupWLANInput" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupWLANCancel"
		android:layout_width="64dp"
		android:layout_height="28dp"
		android:layout_marginTop="23.5dp"
		android:layout_marginEnd="10dp"
		android:layout_marginBottom="20dp"
		android:background="@drawable/wlan_password_popup_cancel_bg"
		android:gravity="center"
		android:includeFontPadding="false"
		android:text="@string/cancel"
		android:textColor="@android:color/white"
		android:textSize="12sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@id/actvPopupWLANConfirm"
		app:layout_constraintTop_toBottomOf="@id/acetPopupWLANInput" />
</androidx.constraintlayout.widget.ConstraintLayout>