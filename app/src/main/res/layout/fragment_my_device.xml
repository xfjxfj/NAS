					android:textColor="@color/settings_title"
					android:textSize="24px"
					android:textStyle="bold"
					app:layout_constraintStart_toEndOf="@id/acivMyDeviceIcon"
					app:layout_constraintTop_toTopOf="@id/acivMyDeviceIcon" />

