<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/popup_bg">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupNetworkPasswordName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="50px"
		android:layout_marginTop="40px"
		android:includeFontPadding="false"
		android:textColor="@android:color/white"
		android:textSize="30px"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupNetworkPasswordTip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="54px"
		android:layout_marginTop="68px"
		android:includeFontPadding="false"
		android:text="@string/network_password"
		android:textColor="@color/popup_content"
		android:textSize="24px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/actvPopupNetworkPasswordName" />

	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/acetPopupNetworkPasswordInput"
		android:layout_width="600px"
		android:layout_height="68px"
		android:layout_marginStart="35px"
		android:layout_marginEnd="56px"
		android:background="@drawable/network_password_popup_input_bg"
		android:gravity="center_vertical"
		android:includeFontPadding="false"
		android:inputType="textPassword"
		android:maxLength="16"
		android:paddingStart="20px"
		android:paddingEnd="20px"
		android:textColor="@android:color/white"
		android:textColorHint="@color/network_password_popup_hint"
		android:textSize="24px"
		app:layout_constraintBottom_toBottomOf="@id/actvPopupNetworkPasswordTip"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/actvPopupNetworkPasswordTip"
		app:layout_constraintTop_toTopOf="@id/actvPopupNetworkPasswordTip" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupNetworkPasswordConfirm"
		android:layout_width="128px"
		android:layout_height="56px"
		android:layout_marginTop="47px"
		android:layout_marginEnd="54px"
		android:layout_marginBottom="40px"
		android:background="@drawable/popup_confirm_bg"
		android:gravity="center"
		android:includeFontPadding="false"
		android:text="@string/confirm"
		android:textColor="@android:color/white"
		android:textSize="24px"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/acetPopupNetworkPasswordInput" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvPopupNetworkPasswordCancel"
		android:layout_width="128px"
		android:layout_height="56px"
		android:layout_marginEnd="20px"
		android:background="@drawable/popup_cancel_bg"
		android:gravity="center"
		android:includeFontPadding="false"
		android:text="@string/cancel"
		android:textColor="@android:color/white"
		android:textSize="24px"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@id/actvPopupNetworkPasswordConfirm"
		app:layout_constraintEnd_toStartOf="@id/actvPopupNetworkPasswordConfirm"
		app:layout_constraintTop_toTopOf="@id/actvPopupNetworkPasswordConfirm" />
</androidx.constraintlayout.widget.ConstraintLayout>