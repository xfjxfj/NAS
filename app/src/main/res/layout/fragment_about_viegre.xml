<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvAboutViegreTitle"
		style="@style/settings_fragment_title"
		android:text="@string/settings_about_viegre"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginStart="30px"
		android:layout_marginTop="42px"
		android:layout_marginEnd="30px"
		android:layout_marginBottom="30px"
		android:background="@drawable/settings_dark_bg"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/actvAboutViegreTitle">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/acivAboutViegreLogo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="62px"
			app:srcCompat="@mipmap/settings_about_logo" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/actvAboutViegreVersion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/acivAboutViegreLogo"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="28px"
			android:includeFontPadding="false"
			android:text="@string/about_viegre_version"
			android:textColor="#B5B6BF"
			android:textSize="20px" />

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/actvAboutViegreVersionCheck"
			android:layout_width="200px"
			android:layout_height="56px"
			android:layout_below="@id/actvAboutViegreVersion"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="57px"
			android:background="@drawable/about_viegre_version_check_bg"
			android:gravity="center"
			android:includeFontPadding="false"
			android:text="@string/about_viegre_version_check"
			android:textColor="@android:color/white"
			android:textSize="24px" />

		<androidx.appcompat.widget.AppCompatTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="20px"
			android:includeFontPadding="false"
			android:text="@string/about_viegre_copyright"
			android:textColor="#5B5C61"
			android:textSize="16px" />
	</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>