<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/clacivItemExternalStorage"
	android:layout_width="204px"
	android:layout_height="240px"
	android:background="@drawable/item_external_storage_bg">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/acivItemExternalStorage"
		android:layout_width="70px"
		android:layout_height="70px"
		android:layout_marginTop="52px"
		android:scaleType="fitXY"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/external_storage_icon" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvItemExternalStorageIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="33px"
		android:ellipsize="end"
		android:includeFontPadding="false"
		android:maxWidth="160px"
		android:maxLines="2"
		android:textColor="#5F626B"
		android:textSize="24px"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/acivItemExternalStorage" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/actvItemExternalStorageCheck"
		android:layout_width="32px"
		android:layout_height="32px"
		android:layout_marginTop="14px"
		android:layout_marginEnd="12px"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/external_storage_unchecked" />
</androidx.constraintlayout.widget.ConstraintLayout>