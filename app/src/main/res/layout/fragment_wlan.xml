<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingStart="15dp"
	android:paddingEnd="15dp">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvWLANTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="39.5dp"
		android:includeFontPadding="false"
		android:text="@string/network_settings"
		android:textColor="@color/settings_title"
		android:textSize="12sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@id/llcWLANHeader"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.LinearLayoutCompat
		android:id="@+id/llcWLANHeader"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="31dp"
		android:background="@drawable/settings_dark_bg"
		android:orientation="vertical"
		app:layout_constraintTop_toBottomOf="@id/actvWLANTitle">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:paddingStart="20dp"
			android:paddingEnd="12.5dp"
			android:background="@color/wlan_dividing_line" />

		<include layout="@layout/item_wlan_list" />
	</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>