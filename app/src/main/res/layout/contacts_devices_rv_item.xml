<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black0"
    android:gravity="center_horizontal"

    android:orientation="horizontal"
    android:padding="6px">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/text_dv"
            android:layout_width="83px"
            android:layout_height="90px"
            android:src="@mipmap/test_settings_my_device_icon"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33px"
            android:layout_marginBottom="19px"
            android:text="@string/exo_controls_hide"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/text_dv"
            app:layout_constraintStart_toStartOf="@+id/text_dv"
            app:layout_constraintTop_toBottomOf="@+id/text_dv"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>