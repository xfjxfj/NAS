<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/call_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33px"
        android:layout_marginTop="33px"
        android:layout_marginRight="32px"
        android:layout_marginBottom="17px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts_add_devices6"
                android:textColor="@color/black12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23px"
                android:layout_height="23px"
                android:layout_gravity="right"
                android:src="@mipmap/phone_icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="33px"
        android:layout_marginTop="17px"
        android:layout_marginRight="32px"
        android:layout_marginBottom="17px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts_add_devices7"
                android:textColor="@color/black12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23px"
                android:layout_height="23px"
                android:layout_gravity="right"
                android:src="@mipmap/video_ico" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_devices_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33px"
        android:layout_marginTop="17px"
        android:layout_marginRight="32px"
        android:layout_marginBottom="17px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts_add_devices8"
                android:textColor="@color/black12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23px"
                android:layout_height="23px"
                android:layout_gravity="right"
                android:src="@mipmap/edit_name" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_devices_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33px"
        android:layout_marginTop="17px"
        android:layout_marginRight="32px"
        android:layout_marginBottom="33px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacts_add_devices9"
                android:textColor="@color/black12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="23px"
                android:layout_height="23px"
                android:layout_gravity="right"
                android:src="@mipmap/delete_dv" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>