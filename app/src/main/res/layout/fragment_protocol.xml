<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black">

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/actvProtocolName"
		style="@style/settings_fragment_title"
		android:text="@string/settings_protocol"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rvProtocol"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="30px"
		android:layout_marginTop="42px"
		android:layout_marginEnd="30px"
		android:layout_marginBottom="30px"
		android:background="@drawable/settings_dark_bg"
		app:layout_constraintTop_toBottomOf="@id/actvProtocolName" />
</androidx.constraintlayout.widget.ConstraintLayout>